{#-----------------------------------------------------------------#}
{% macro header(infos) %}
{#-----------------------------------------------------------------#}
  <section class="hero">
    <div class="container flow">
      
      <div class="hero__content flow">
        <h1 class="section-title">{{ infos.label }} </h1>
        <p>{{ infos.descriptions[0] }}</p>
        <p>{{ infos.descriptions[1] }}</p>

        <div class="flex-group">
          <a href="{{ infos.featured.link }}" class="btn btn--primary">{{ infos.featured.label }}</a>
          <a href="{{ infos.recent.link }}" class="btn btn--neutral">{{ infos.recent.label }}</a>
        </div>
      </div>

      <div>
        <img src="//unsplash.it/510" alt="" class="hero__image">
      </div>
    
    </div>
  </section>
{% endmacro %}

{#-----------------------------------------------------------------#}
{% macro item_articles(item) %}
{#-----------------------------------------------------------------#}
<section id=`{{ item.name }}-articles` class=`{{ item.name }}-articles`>
  <div class="container flow">
    <h2 class="section-title text-center ">{{ item.label }} articles</h2>
    <p class="text-center">{{ item.description }}</p>

    <ul role="list" class="articles__list flow">
      {{ item.showItems() }}
    </ul>
  </div>
</section>
{% endmacro %}